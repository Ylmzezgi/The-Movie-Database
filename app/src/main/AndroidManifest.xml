        android:supportsRtl="true"
        android:theme="@style/Theme.TMDI"
        tools:targetApi="31" >
        <activity
            android:name=".intro.OnboardingPage"
            android:exported="false" />
        <activity
            android:name=".user.userInformationPage"
            android:exported="false" />
        <activity
            android:name=".user.ProfilPage"
